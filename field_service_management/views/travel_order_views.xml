<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_travel_order" model="ir.actions.act_window">
        <field name="name">Travel Orders</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_travel_order"
              parent="menu_travel_order_root"
              name="Travel Orders"
              action="action_travel_order"
              sequence="10"/>

    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[1]" position="inside">
                <div class="oe_title">
                    <field name="number" readonly="1"/>
                </div>
                <group>
                    <field name="vehicle_id"/>
                    <field name="technician_ids" widget="many2many_tags"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_travel_order_form" model="ir.ui.view">
        <field name="name">travel.order.form</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <form string="Travel Order">
                <sheet>
                    <div class="oe_title">
                        <field name="number" readonly="1"/>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="vehicle_id"/>
                        <field name="technician_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_travel_order_tree" model="ir.ui.view">
        <field name="name">travel.order.tree</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree string="Travel Order">

                <field name="number" readonly="1"/>

                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="technician_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

</odoo>
