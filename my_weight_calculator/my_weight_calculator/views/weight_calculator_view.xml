<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="action_weight_calculator" model="ir.actions.act_window">
        <field name="name">Weight Calculator</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_weight_calculator_entries"
              parent="menu_weight_calculator"
              name="Weight Calculator"
              action="action_weight_calculator"
              sequence="10"/>

    <record id="view_product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[4]" position="inside">
                            <group>
                                <field name="material"/>
                                <field name="length"/>
                                <field name="width"/>
                                <field name="thickness"/>
                                <field name="density" readonly="1"/>
                                <field name="weight" readonly="1"/>
                            </group>

                
            </xpath>
        </field>
    </record>

    <record id="view_weight_calculator_form" model="ir.ui.view">
        <field name="name">weight.calculator.form</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <form string="Weight Calculator">
                <sheet>
                    <group>
                        <field name="material"/>
                        <field name="length"/>
                        <field name="width"/>
                        <field name="thickness"/>
                        <field name="density" readonly="1"/>
                        <field name="weight" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Definirea vederii de listÄƒ pentru calculator -->
    <record id="view_weight_calculator_tree" model="ir.ui.view">
        <field name="name">weight.calculator.tree</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree string="Weight Calculator">
                <field name="material"/>
                <field name="length"/>
                <field name="width"/>
                <field name="thickness"/>
                <field name="density"/>
                <field name="weight"/>
            </tree>
        </field>
    </record>
</odoo>
